@model Feature

@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">

							<label>Başlık Bilgisi</label>
							<input type="text" asp-for="Title" class="form-control" required />
							<br />
							<textarea rows="4" asp-for="Description" class="form-control" required></textarea>
							<br />
							<button class="btn btn-primary">Öne Çıkan Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>