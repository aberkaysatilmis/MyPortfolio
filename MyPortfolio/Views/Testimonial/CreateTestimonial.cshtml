@model Testimonial

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Ad Soyad</label>
							<input type="text" asp-for="NameSurname" class="form-control" required />
							<br />
							<label>Unvan</label>
							<input type="text" asp-for="Title" class="form-control" required />
							<br />
							<label>Görsel Yolu</label>
							<input type="text" asp-for="ImageUrl" class="form-control" required />
							<br />
							<label>Açıklama</label>
							<textarea rows="4" asp-for="Description" class="form-control" required></textarea>
							<br />
							<button class="btn btn-outline-warning">Referans Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>