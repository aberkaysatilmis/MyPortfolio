@model ToDoList

@{
	ViewData["Title"] = "CreateToDoList";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacak İşlem Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">

							<label>İçerik Bilgisi</label>
							<input type="text" asp-for="Title" class="form-control" required />
							<br />
							<label>Tarih Bilgisi</label>
							<input type="date" asp-for="Date" class="form-control" required />
							<br />
							<label>Görsel Yolu</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<button class="btn btn-outline-warning">Yapılacak işlemi Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>